<body>
  <header>
    <nav class="navbar">
      <div id="brand-container">
        <div class="brand">
          <div class="logo">
            <a href="/"
              ><img src="<%= assetPath('logo.png') %> " alt="Logo"
            /></a>
          </div>
          <div class="word-mark" id="navbar-word-mark">
            <a href="/">TrippieBook</a>
          </div>
        </div>
        <div class="title-mark" id="navbar-title-mark">
          <p> Enjoy your Travels!</p>
        </div>
      </div>
      <div id="menu-container">
        <ul>
          <% if (userIsLoggedIn) { // usuario está logeado %>
            <li id="profile-picture-container">
              <a href="<%= showUserPath(currentUser.id) %>"
                ><img
                  id="profile-picture"
                  src="<%= currentUser.avatarLink %> "
                  alt="Profile picture"
              /></a>
            </li>
            <li>
              <a href="<%= showUserPath(currentUser.id) %>"><%= `${currentUser.firstName} ${currentUser.lastName}` %> </a>
            </li>
            <li>
              <form action="<%- logoutPath %>" method="POST">
                <input type="hidden" name="_method" value="delete" />
  
                <button class="logout-button" type="submit">
                  Log out
                </button>
              </form>
            </li>
          <% } else { // usuario no está logeado %>
            <li>
              <a href="<%= signupPath %>">Sign Up</a>
            </li>
            <li>
              <a href="<%= loginPath %>">Log In</a>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>
    <div class="navbar-offset"></div>
  </header>
  <script src="<%= assetPath('navbar.js') %>"></script>
</body>
